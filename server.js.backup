const express = require('express');
const session = require('express-session');
const bodyParser = require('body-parser');
const path = require('path');
const store = require('./store');

const app = express();
const PORT = process.env.PORT || 3000;

// Middleware
app.use(bodyParser.json());
app.use(bodyParser.urlencoded({ extended: true }));
app.use(express.static(path.join(__dirname, 'public')));

// Session configuration
app.use(session({
  secret: 'fleet-management-secret-key-change-in-production',
  resave: false,
  saveUninitialized: false,
  cookie: {
    secure: false, // Set to true if using HTTPS
    maxAge: 24 * 60 * 60 * 1000 // 24 hours
  }
}));

// Authentication middleware
const requireAuth = (req, res, next) => {
  if (!req.session.user) {
    return res.status(401).json({ error: 'Authentication required' });
  }
  next();
};

// Admin middleware
const requireAdmin = (req, res, next) => {
  if (!req.session.user || req.session.user.role !== 'admin') {
    return res.status(403).json({ error: 'Admin access required' });
  }
  next();
};

// Check admin password for elevated operations
const checkAdminPassword = async (req, res, next) => {
  // Safely extract admin password from body, header or query
  const password = (req.body && req.body.admin_password) || req.headers['x-admin-password'] || req.query.admin_password;

  if (!password) {
    return res.status(400).json({ error: 'Admin password required' });
  }

  const currentUser = req.session && req.session.user;
  if (!currentUser) {
    return res.status(401).json({ error: 'Authentication required' });
  }

  // Only users with admin role may elevate
  if (currentUser.role !== 'admin') {
    return res.status(403).json({ error: 'Admin access required' });
  }

  try {
    // For LDAP users, verify against LDAP via store.verifyPassword (which performs a bind)
    if (currentUser.ldap_user) {
      const ldapUser = await store.verifyPassword(currentUser.username, password);
      if (!ldapUser) {
        return res.status(401).json({ error: 'Invalid admin password' });
      }
      // Ensure the account still has admin role
      if (ldapUser.role !== 'admin') {
        return res.status(403).json({ error: 'Admin access required' });
      }
      req.session.is_elevated = true;
      return next();
    }

    // For local users, verify against stored bcrypt hash
    const bcrypt = require('bcryptjs');
    const user = await store.getUserByUsername(currentUser.username);
    if (!user || !user.password) {
      return res.status(401).json({ error: 'Invalid admin password' });
    }

    const valid = await bcrypt.compare(password, user.password);
    if (!valid) {
      return res.status(401).json({ error: 'Invalid admin password' });
    }

    req.session.is_elevated = true;
    return next();
  } catch (err) {
    console.error('checkAdminPassword error:', err);
    return res.status(500).json({ error: 'Internal server error' });
  }
};

// Routes

// Auth
app.post('/api/login', async (req, res) => {
  try {
    const { username, password } = req.body;
    const user = await store.verifyPassword(username, password);
    
    if (!user) {
      return res.status(401).json({ error: 'Invalid credentials' });
    }
    
    req.session.user = user;
    res.json({ success: true, user });
  } catch (error) {
    res.status(500).json({ error: error.message });
  }
});

app.post('/api/logout', (req, res) => {
  req.session.destroy();
  res.json({ success: true });
});

app.get('/api/me', requireAuth, (req, res) => {
  res.json({ user: req.session.user, is_elevated: !!req.session.is_elevated });
});

